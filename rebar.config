{deps, [ {kafka_protocol, "4.3.0"}
       , {replayq, "0.4.1"}
       , {lc, "0.3.5"}
       , {telemetry, "1.1.0"}
       ]}.

{erl_opts, [ error
           , warn_unused_vars
           , warn_shadow_vars
           , warn_unused_import
           , warn_obsolete_guard
           , warnings_as_errors
           , debug_info
           ]}.

{eunit_opts, [verbose]}.
{cover_enabled, true}.
{edoc_opts, [{preprocess, true}]}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, deprecated_function_calls,
               deprecated_functions]}.

{profiles,
 [{test,
   [ {deps, [ {meck, "0.9.2"}
            ]}
   , {erl_opts, [debug_info]}
   , {plugins, [{coveralls, {git, "https://github.com/emqx/coveralls-erl",
                             {tag, "v2.2.0-emqx-1"}}}]}
   ]}]}.
{shell, [{apps, [wolff]}]}.
{profiles, [
  {test, [
    {deps, [
      {meck, "1.0.0"}
    ]}
  ]}
]}.

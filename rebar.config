{deps, [ {kafka_protocol, "4.0.3"}
       , {replayq, "0.3.3"}
       ]}.

{erl_opts, [ error
           , warn_unused_vars
           , warn_shadow_vars
           , warn_unused_import
           , warn_obsolete_guard
           , debug_info
           ]}.

{eunit_opts, [verbose]}.
{cover_enabled, true}.
{edoc_opts, [{preprocess, true}]}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, deprecated_function_calls,
               deprecated_functions]}.
